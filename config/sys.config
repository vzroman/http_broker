[
  {http_broker, [
    %% ----------------------[HTTP BROKER]--------------------------
    %% +---------------+-------------------------------------------+
    %% |  Argument     | Description                               |
    %% +---------------+-------------------------------------------+
    %% | retry_cycle   | Time interval for retry attempts          |
    %% | max_age       | Maximum age for record in queue           |
    %% | purge_cycle   | Time interval for purging record          |
    %% | max_age_cycle | Maximum age cycle for periodic checks     |
    %% | queue_dir     | Directory path for the queue storage name |
    %% +---------------+-------------------------------------------+
    %% | port          | Port configuration for server setup       |
    %% | endpoints     | List of endpoints and their configuration |
    %% | strategy      | Strategy for the whole endpoint           | (ONE/ALL)
    %% | targets       | List of targets with URLs                 |
    %% | order         | Priority order for each target            | (lower values indicate higher priority)
    %% | ssl           | ssl params for service                    | <optional>
    %% | cacertfile    | Path to CA certificate file (optional)    |
    %% | certfile      | Path to the server certificate file       |
    %% | keyfile       | Path to the private key file              |
    %% +-----------------------------------------------------------+

    %%--------------HTTP server settings---------------------------------
    {port, 7000},
%%    {ssl, [
%%      {cacertfile, "ca-chain.cert.pem"},
%%      {certfile, "cert.pem"},
%%      {keyfile, "key.pem"}
%%    ]},

    %-------------Services settings--------------------------------------
    {retry_cycle, 1000},                    %% milliseconds
    {max_age, 30},                          %% days
    {purge_cycle, 10},                    %% seconds
    {max_age_cycle, 3600},                  %% seconds
    {queue_dir, "QUEUE"},

    %------------ENDPOINTS->TARGETS---------------------------------------
    {endpoints, #{
      "/ndc" => #{
        strategy => all,
        targets => #{
          "http://192.168.1.57:7000/rest/http_srv/b1" => #{
            order => 1
%%          ssl => <optional> % ssl params for service
          },
          "http://192.168.1.57:7002/rest/http_srv/b1" => #{
            order => 1
%%          ssl => <optional> % ssl params for service
          }
        }
      }
    }
    }
  ]},

  %%--------------------logging settings-----------------------------------------------------------
  {kernel,[
    {logger_level, info},
    {logger,[
      { handler, console, logger_std_h, #{ level => info }},
      { handler, info, logger_std_h, #{ level => info, formatter => {logger_formatter, #{}}, config => #{
        file => "logs/console.log",
        max_no_bytes => 104857600,  % 100 MB
        max_no_files => 100
      }}},
      { handler, error, logger_std_h, #{ level => error, formatter => {logger_formatter, #{}}, config => #{
        file => "logs/error.log",
        max_no_bytes => 104857600,  % 100 MB
        max_no_files => 100
      }}}
    ]}
  ]}
].
